<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/ongoing_progress_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_small"
        android:background="@color/default_stroke_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ongoing_progress_bar_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_small"
        android:layout_marginEnd="16dp"
        android:background="@color/default_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xsmall"
        android:gravity="center"
        android:text="80%"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
        android:textColor="@color/default_date_background"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ongoing_progress_bar_status"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ongoing_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/ongoing_progress_bar_status" />

</androidx.constraintlayout.widget.ConstraintLayout>
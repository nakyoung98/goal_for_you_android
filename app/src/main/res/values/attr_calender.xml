<?xml version="1.0" encoding="utf-8"?>

<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <attr name="nakyoungCalenderDateCardviewStyle" format="reference"/>

    <declare-styleable name="CalenderDateCardview">
        <attr name="date" format="integer"/>
        <attr name="dateTextColor" format="reference|color"/>
        <attr name="datePosition" format="enum">
            <enum name="start" value="8388611"/>
            <enum name="center" value="1" />
            <enum name="end" value="8388613"/>
        </attr>
        <attr name="dateBackgroundColor" format="reference|color"/>
        <attr name="goalTextColor" format="reference|color"/>
        <attr name="firstGoalColor" format="reference|color"/>
        <attr name="secondGoalColor" format="reference|color" />
        <attr name="thirdGoalColor" format="reference|color" />
    </declare-styleable>

    <color name="calender_background">#f4f0e6</color>

    <string name="monday">월</string>
    <string name="tuesday">화</string>
    <string name="wednesday">수</string>
    <string name="thursday">목</string>
    <string name="friday">금</string>
    <string name="saturday">토</string>
    <string name="sunday">일</string>

    <!--    Custom calenderDateCardview 값 정리-->
    <dimen name="date_cardview_corner">2dp</dimen>
    <dimen name="date_cardview_elevation">1dp</dimen>
    <dimen name="date_cardview_item_margin">0.5dp</dimen>
    <dimen name="date_cardview_width">@dimen/margin_large</dimen>
    <dimen name="date_cardview_height">@dimen/margin_xlarge</dimen>
    <dimen name="calender_corner">16dp</dimen>


    <style name="Nakyoung.MaterialComponents.calendarCardView" parent="Widget.MaterialComponents.CardView">
        <item name="nakyoungCalenderDateCardviewStyle" type="">@style/Nakyoung.MaterialComponents.calendarCardView</item>
        <item name="date">1</item>
        <item name="dateTextColor">?attr/colorOnPrimaryContainer</item>
        <item name="dateBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="goalTextColor">?attr/colorOnPrimaryContainer</item>
        <item name="firstGoalColor">?attr/colorBackground1</item>
        <item name="secondGoalColor">?attr/colorBackground2</item>
        <item name="thirdGoalColor">?attr/colorBackground3</item>
    </style>

</resources>